<div class="fact" data-url="<%= url_for_fact(fact) %>">
  [[1]]
  <%= link_to(url_for_fact(fact)) do %>
      <h5><%= fact.title %></h5>
  <% end %>
  <p class="date">
    <%= local_time(fact[:created_at], format: '%e.%m.%Y') %>
  </p>
  <p class="short">
    <%= fact[:short].html_safe %>
  </p>
  <div class="white_shadow"></div>
</div>